      //
      // Command Line Runner Printing Facilities.
      //

     H NoMain Option(*SrcStmt)

      //----------------------------------------------------------------------
      //   Files
      //----------------------------------------------------------------------

     FQSYSPRT   o    f   80        printer OFLIND(*INOF) UsrOpn


      //----------------------------------------------------------------------
      //   Exports
      //----------------------------------------------------------------------

      /copy RPGUNITY1,CMDRUNPRT


      //----------------------------------------------------------------------
      //   Imports
      //----------------------------------------------------------------------

      //----------------------------------------------------------------------
      //   Private Procedures
      //----------------------------------------------------------------------

      //----------------------------------------------------------------------
      //   Constants
      //----------------------------------------------------------------------

      //----------------------------------------------------------------------
      //   Global Variables
      //----------------------------------------------------------------------

       // Line for printing in log.
     D logLine         s             80a

     OQSYSPRT   e            ExcpLine    1
     O                       logLine             80


      //----------------------------------------------------------------------
      //   Procedures
      //----------------------------------------------------------------------

     P clsPrt          b                   Export
       //----------------------------------------------------------------------
       // Close the printer file. See prototype.
       //----------------------------------------------------------------------
     D clsPrt          pi
      /free

        if %open(QSYSPRT);
          close QSYSPRT;
        endif;

      /end-free
     P                 e


     P getPrtWidth     b                   Export
     D getPrtWidth     pi            10i 0
      /free

        return %len( logLine );

      /end-free
     P                 e


     P prtLine         b                   Export
       //----------------------------------------------------------------------
       // Print a line. See prototype.
       //----------------------------------------------------------------------
     D prtLine         pi
     D  line                         80a   Const
      /free

        if not %open(QSYSPRT);
          open QSYSPRT;
        endif;

        logLine = line;
        except ExcpLine;

      /end-free
     P                 e

